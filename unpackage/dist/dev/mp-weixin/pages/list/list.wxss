  line-height: 32rpx;
  font-weight: 400;
  letter-spacing: 6rpx;
}
.page .category-wrapper .left-wrapper .left-content .title-content.onSelected {
  position: relative;
  color: #FFA68F;
}
.page .category-wrapper .left-wrapper .left-content .title-content.onSelected::before {
  content: '';
