.page .category-wrapper .left-wrapper {
  border-top: 1rpx #F7F3F1 solid;
  width: 161rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 161rpx;
          flex: 0 0 161rpx;
}
